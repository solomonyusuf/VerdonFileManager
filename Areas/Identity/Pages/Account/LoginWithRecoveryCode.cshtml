@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="row justify-content-center">
    <div class="col-md-9 col-lg-12 col-xl-10">
        <div class="card shadow-lg o-hidden border-0 my-5">
            <div class="card-body p-0">
                <div class="row" style="height:600px;">
                    <div class="col-lg-7 d-none d-lg-flex">
                        <div class="flex-grow-1 bg-login-image" style="background-image:url('/assets/img/hero-carousel/hero-carousel-2.svg');"></div>
                    </div>
                    <div class="col-lg-5">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 style="color:black; font-size:larger; font-weight:bolder;">
                                    <i>Ver<span style="color:rgb(43,187,208);font-size:larger;">don.</span></i>
                                    <sub><small class="text-dark lead" style="font-size:small;">DIRECTORY</small></sub>
                                </h1>
                                <h4 class="text-dark mb-4">@ViewData["Title"]</h4>
                            </div>
                            <hr />

                            <p>
                                You have requested to log in with a recovery code. This login will not be remembered until you provide
                                an authenticator app code at log in or disable 2FA and log in again.
                            </p>
                            <div class="row">
                                <div>
                                    <form method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Input.RecoveryCode"></label>
                                            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Login</button>
                                    </form>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
