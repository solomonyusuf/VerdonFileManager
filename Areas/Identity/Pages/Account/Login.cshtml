@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-12 col-xl-10">
            <div class="card shadow-lg o-hidden border-0 my-5">
                <div class="card-body p-0">
                <div class="row" style="height:600px;">
                        <div class="col-lg-7 d-none d-lg-flex">
                            <div class="flex-grow-1 bg-login-image" style="background-image:url('/assets/img/features-6.svg');"></div>
                        </div>
                        <div class="col-lg-5">
                            <div class="p-5">
                                <div class="text-center">
                                <h1 style="color:black; font-size:larger; font-weight:bolder;">
                                    <i>Ver<span style="color:rgb(43,187,208);font-size:larger;">don.</span></i>
                                    <sub><small class="text-dark lead" style="font-size:small;">DIRECTORY</small></sub>
                                </h1>
                                    <h4 class="text-dark mb-4">Account Login</h4>
                                </div>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div><br />
                                <form id="account" method="post" class="user">
                                    <div class="mb-3">
                                        <input asp-for="Input.Email" class="form-control form-control-lg form-control-user" placeholder="Enter Email Address..." />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <input asp-for="Input.Password" class="form-control form-control-lg form-control-user" placeholder="Enter Password..." />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                      </div>
                                    <div class="mb-3">
                                        <div class="custom-control custom-checkbox small">
                                            <div class="checkbox">
                                                <label asp-for="Input.RememberMe">
                                                    <input asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                    </div><button class="btn btn-primary d-block btn-user w-100" type="submit">Login</button>
                                   
                                </form>
                                <div class="text-center">
                                    <div class="form-group">
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </p>
                                        <p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                        </p>
                                        <p>
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


